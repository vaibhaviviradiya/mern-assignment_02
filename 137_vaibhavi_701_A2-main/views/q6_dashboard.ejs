<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News API Integration</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        h1 {
            text-align: center;
            color: white;
            margin-bottom: 30px;
            font-size: 2.5rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }
        
        .api-section {
            background: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }
        
        .section-title {
            color: #333;
            margin-bottom: 20px;
            font-size: 1.5rem;
            border-bottom: 3px solid #667eea;
            padding-bottom: 10px;
        }
        
        .controls {
            margin-bottom: 20px;
            display: flex;
            gap: 10px;
            align-items: center;
            flex-wrap: wrap;
        }
        
        select {
            padding: 10px 15px;
            border: 2px solid #ddd;
            border-radius: 25px;
            font-size: 14px;
            outline: none;
        }
        
        select:focus {
            border-color: #667eea;
        }
        
        .btn {
            background: #667eea;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 25px;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.3s ease;
        }
        
        .btn:hover {
            background: #5a6fd8;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        
        .btn-secondary {
            background: #28a745;
        }
        
        .btn-secondary:hover {
            background: #218838;
        }
        
        .news-grid {
            display: grid;
            gap: 20px;
        }
        
        .news-card {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            border-left: 4px solid #667eea;
            transition: transform 0.2s ease;
        }
        
        .news-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        .news-title {
            color: #333;
            font-size: 1.1rem;
            font-weight: bold;
            margin-bottom: 10px;
            line-height: 1.4;
        }
        
        .news-description {
            color: #666;
            margin-bottom: 15px;
            line-height: 1.5;
        }
        
        .news-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.9rem;
            color: #888;
        }
        
        .news-source {
            background: #667eea;
            color: white;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.8rem;
        }
        
        .news-link {
            color: #667eea;
            text-decoration: none;
            font-weight: bold;
        }
        
        .news-link:hover {
            text-decoration: underline;
        }
        
        .loading {
            text-align: center;
            color: #667eea;
            font-style: italic;
            padding: 20px;
        }
        
        .error {
            background: #f8d7da;
            color: #721c24;
            padding: 15px;
            border-radius: 8px;
            border-left: 4px solid #dc3545;
        }
        
        .no-news {
            text-align: center;
            color: #666;
            font-style: italic;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>üì∞ News API Integration</h1>
        
        <!-- Backend API Calls Section -->
        <div class="api-section">
            <h2 class="section-title">üîß Backend API Calls</h2>
            <p style="margin-bottom: 20px; color: #666;">News fetched from server-side using Node.js/Express</p>
            
            <div class="controls">
                <select id="categoryBackend">
                    <option value="technology">Technology</option>
                    <option value="business">Business</option>
                    <option value="sports">Sports</option>
                    <option value="entertainment">Entertainment</option>
                    <option value="health">Health</option>
                    <option value="science">Science</option>
                </select>
                <button class="btn" onclick="getNewsBackend()">Get News (Backend)</button>
            </div>
            
            <div id="newsResultBackend" class="news-grid"></div>
        </div>
        
        <!-- Frontend API Calls Section -->
        <div class="api-section">
            <h2 class="section-title">üåç Frontend API Calls</h2>
            <p style="margin-bottom: 20px; color: #666;">News fetched directly from browser using JavaScript</p>
            
            <div class="controls">
                <select id="categoryFrontend">
                    <option value="technology">Technology</option>
                    <option value="business">Business</option>
                    <option value="sports">Sports</option>
                    <option value="entertainment">Entertainment</option>
                    <option value="health">Health</option>
                    <option value="science">Science</option>
                </select>
                <button class="btn btn-secondary" onclick="getNewsFrontend()">Get News (Frontend)</button>
            </div>
            
            <div id="newsResultFrontend" class="news-grid"></div>
        </div>
    </div>

    <script>
        // Backend API Calls (through our server)
        async function getNewsBackend() {
            const category = document.getElementById('categoryBackend').value;
            const resultDiv = document.getElementById('newsResultBackend');
            
            resultDiv.innerHTML = '<div class="loading">Loading news from backend...</div>';
            
            try {
                const response = await fetch(`/q6/news?category=${encodeURIComponent(category)}`);
                const data = await response.json();
                
                if (response.ok && data.length > 0) {
                    resultDiv.innerHTML = data.map(article => `
                        <div class="news-card">
                            <div class="news-title">${article.title}</div>
                            <div class="news-description">${article.description || 'No description available'}</div>
                            <div class="news-meta">
                                <span class="news-source">${article.source}</span>
                                <span>${article.publishedAt}</span>
                            </div>
                            <a href="${article.url}" target="_blank" class="news-link">Read Full Article ‚Üí</a>
                        </div>
                    `).join('');
                } else {
                    resultDiv.innerHTML = '<div class="no-news">No news found for this category.</div>';
                }
            } catch (error) {
                resultDiv.innerHTML = `<div class="error">Error: ${error.message}</div>`;
            }
        }

        // Frontend API Calls (direct from browser)
        async function getNewsFrontend() {
            const category = document.getElementById('categoryFrontend').value;
            const resultDiv = document.getElementById('newsResultFrontend');
            
            resultDiv.innerHTML = '<div class="loading">Loading news from frontend...</div>';
            
            try {
                const response = await fetch(`https://newsapi.org/v2/top-headlines?country=us&category=${category}&apiKey=1f1309676d1f48ff806847598fa02e14`);
                const data = await response.json();
                
                if (response.ok && data.articles && data.articles.length > 0) {
                    const articles = data.articles.slice(0, 5);
                    resultDiv.innerHTML = articles.map(article => `
                        <div class="news-card">
                            <div class="news-title">${article.title}</div>
                            <div class="news-description">${article.description || 'No description available'}</div>
                            <div class="news-meta">
                                <span class="news-source">${article.source.name}</span>
                                <span>${new Date(article.publishedAt).toLocaleDateString()}</span>
                            </div>
                            <a href="${article.url}" target="_blank" class="news-link">Read Full Article ‚Üí</a>
                        </div>
                    `).join('');
                } else {
                    resultDiv.innerHTML = '<div class="no-news">No news found for this category.</div>';
                }
            } catch (error) {
                resultDiv.innerHTML = `<div class="error">Error: ${error.message}</div>`;
            }
        }

        // Load initial news on page load
        window.onload = function() {
            getNewsBackend();
            getNewsFrontend();
        };
    </script>
</body>
</html>
